<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elemendid.TextToSpeech">
    <ContentPage.Content>
        <StackLayout>
            <Entry x:Name="ent" Placeholder="Write here"></Entry>
            <Label Text="Volume"></Label>
            <Slider x:Name="pit" ValueChanged="pit_ValueChanged" Minimum="0.1" Maximum="1.0"></Slider>
            <Label Text="Pitch"></Label>
            <Slider x:Name="vol" ValueChanged="vol_ValueChanged" Minimum="0.1" Maximum="1.0"></Slider>
            <Button Clicked="Button_Clicked" Text="Speak"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>