<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Elemendid.SQL">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Unit Converter"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
            <Entry x:Name="ent" Placeholder="Miles,Pounds"></Entry>
            <Button Text="Convert" Clicked="Button_Clicked"></Button>
            <Label x:Name="lab"></Label>
            <Label x:Name="lab2"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>